

   <div class="slds-grid slds-wrap slds-align_absolute-center">
      <div class="slds-size_1-of-1 slds-align_absolute-center slds-m-vertical_xx-large">
         <img src="/images/platform-simple-1400.png" width="600px"/>
      </div>
      <div id="form_submit_msg" class="slds-size_3-of-5  slds-box slds-theme_shade slds-theme_alert-texture slds-m-horizontal_large  slds-m-bottom_xx-large slds-align_absolute-center slds-hidden">
         <p id="response_msg"></p>
      </div>
      <div class="slds-size_2-of-5 slds-form slds-form_horizontal">
         <div class="slds-form-element">
            <label class="slds-form-element__label" for="your_email">Your Email</label>
            <div class="slds-form-element__control">
               <input type="text" id="your_email" class="slds-input" value="email@address.com" placeholder="example@email.com">
            </div>
         </div>
         <div class="slds-form-element">
            <label class="slds-form-element__label" for="customer">Customer</label>
            <div class="slds-form-element__control">
               <input type="text" id="customer" class="slds-input" value="salesforce" placeholder="A very innovative customer">
            </div>
         </div>        
         <div class="slds-form-element">
            <label class="slds-form-element__label" for="region">Region</label>
            <div class="slds-form-element__control">
               <div class="slds-select_container">
                  <select class="slds-select" id="region">
                     <option >--Select One--</option>
                     <option label="EMEA" value="emea" selected/>
                     <option label="APAC" value="apac" />
                     <option label="Japan" value="japan" />
                     <option label="AMER" value="amer" />
                  </select>
               </div>
            </div>
         </div> 
         <div class="slds-form-element  slds-align_absolute-center">
            <button id="submit_btn" class="slds-button slds-button_stateful slds-not-selected slds-button_brand">Contact Me!</button>
         </div>          
      </div>
   </div>

   <script type="text/javascript">
      $(document).ready(function() {
         $("#submit_btn").click(function() {
            $("#submit_btn").addClass('slds-hide');
            $.post( "/submitForm", { email: $("#your_email").val(), customer: $("#customer").val(), region: $("#region").val() }, (data) => {
               $("#response_msg").html(data.message);
               $("#form_submit_msg").removeClass('slds-hidden');
            } );
         })
      })
   </script>
